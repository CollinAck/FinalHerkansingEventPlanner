@model IEnumerable<FinalHerkansingEventPlanner.Models.CategoryChoice>

@{
    ViewData["Title"] = "Index";
}

<h1>Maak een categorie aan</h1>

<p>
    <a class="btn btn-dark" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryChoiceName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryChoiceName)
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Edit" asp-route-id="@item.CategoriesChoiceId">Edit</a> 
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.CategoriesChoiceId">Details</a> 
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.CategoriesChoiceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
