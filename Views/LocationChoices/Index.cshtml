@model IEnumerable<FinalHerkansingEventPlanner.Models.LocationChoice>

@{
    ViewData["Title"] = "Index";
}

<h1>Maak een locatie aan</h1>

<p>
    <a class="btn btn-dark" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationChoiceName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocationChoiceName)
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Edit" asp-route-id="@item.LocationChoiceId">Edit</a> 
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.LocationChoiceId">Details</a> 
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.LocationChoiceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
